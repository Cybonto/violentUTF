.dockerignore text eol=lf
.gitignore text eol=lf
.env text eol=lf
.env.* text eol=lf
.flake8 text eol=lf
.pylintrc text eol=lf
Makefile text eol=lf

# Windows specific files
*.bat text eol=crlf
