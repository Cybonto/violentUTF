[bandit]
# Bandit configuration to suppress verbose warnings while maintaining security scanning
# This prevents comment parsing warnings from causing CI failures

# Skip specific tests that generate noise
skips = B901

# Exclude test directories that have intentionally weak security for testing
exclude_dirs = tests,test,.*test.*,__pycache__,node_modules,.git,.venv,venv,env

# Suppress verbose warning output while maintaining JSON report accuracy
quiet = true

# Set confidence and severity levels
confidence = medium
severity = medium
