[flake8]
max-line-length = 120
max-complexity = 60
ignore = E203,W503,E501,F401,F541,E226
exclude = .git,__pycache__,build,dist,.eggs,*.egg-info,.tox,.venv,venv,.vitutf,.pytest_cache,migrations,app_data,violentutf_logs,tests
per-file-ignores =
    __init__.py:F401
    test_*.py:C901,F811,E402
    tests/*.py:F811,E402
    tests/**/*.py:F811,E402
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s
show-source = True
count = True
statistics = True
