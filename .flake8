[flake8]
# Configuration for flake8 linting
max-line-length = 120
max-complexity = 60
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .tox,
    .venv,
    venv,
    .vitutf,
    .pytest_cache,
    migrations,
    app_data,
    violentutf_logs,
    tests
ignore = 
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # E501: line too long (handled by max-line-length)
    E501,
    # F401: imported but unused (handled separately)
    F401,
    # F541: f-string is missing placeholders (intentional - see docs/development/code_style_decisions.md)
    F541,
    # E226: missing whitespace around arithmetic operator (intentional for string multiplication like '='*70)
    E226
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow complex functions in test files
    test_*.py:C901
    # Allow redefinition in test files (F811)
    test_*.py:F811
    tests/*.py:F811
    tests/**/*.py:F811
    **/test_*.py:F811
    **/tests/*.py:F811
    **/tests/**/*.py:F811
    # Allow module level imports not at top of file in test files (due to sys.path modifications)
    test_*.py:E402
    tests/*.py:E402
    tests/**/*.py:E402
    **/test_*.py:E402
    **/tests/*.py:E402
    **/tests/**/*.py:E402
    *_test.py:E402
    test_phase1_openapi.py:E402
    # Specific files that need E402 and F811 exceptions
    tests/api_tests/conftest.py:E402,F811
    tests/api_tests/test_converter_apply_functionality.py:E402
    tests/api_tests/test_enhanced_generator_functionality.py:E402
    tests/api_tests/test_save_and_test_generator.py:E402
    tests/conftest.py:E402
    tests/debug_dashboard_api.py:E402
    tests/test_apisix_integration.py:E402
    tests/test_authentication_flow.py:E402
    tests/test_enhancement_strip_integration.py:E402
    tests/test_mcp_client.py:E402
    tests/test_mcp_integration.py:E402
    tests/test_mcp_integration_utils.py:E402
    tests/test_orchestrator_dataset.py:E402
    tests/test_phase3_command_parser.py:E402
    tests/test_phase3_integration.py:E402
    tests/test_scorer_batch_execution.py:E402
    tests/test_scorer_timeout_fix.py:E402
    tests/test_targets.py:E402
    tests/test_unit_api_endpoints.py:E402
    tests/test_welcome_endpoints.py:E402
    tests/unit/utils/test_mcp_integration_utils.py:E402
    tests/unit/utils/test_phase3_command_parser.py:E402
    # Allow long lines in configuration files
    */config.py:E501
    */settings.py:E501

# Additional flake8 plugins configuration
extend-ignore = 
    # ANN401: Dynamic typing with Any is acceptable in this codebase
    ANN401,
    # ANN101: self annotation not required for standard methods
    ANN101,
    # ANN003: **kwargs annotation not required
    ANN003,
    # ANN001: Missing type annotation for common parameters
    ANN001,
    # ANN002: Missing type annotation for *args
    ANN002,
    # ANN102: Missing type annotation for cls in classmethod
    ANN102,
    # ANN201: Missing return type annotation for public function
    ANN201,
    # ANN202: Missing return type annotation for protected function
    ANN202,
    # ANN204: Missing return type annotation for special method
    ANN204,
    # ANN206: Missing return type annotation for classmethod
    ANN206,
    # D100: Missing docstring in public module (not critical)
    D100,
    # D101: Missing docstring in public class (not critical)
    D101,
    # D102: Missing docstring in public method (not critical)
    D102,
    # D103: Missing docstring in public function (not critical)
    D103,
    # D104: Missing docstring in public package (not critical)
    D104,
    # D105: Missing docstring in magic method (not critical)
    D105,
    # D106: Missing docstring in public nested class (not critical)
    D106,
    # D107: Missing docstring in __init__ (not critical)
    D107,
    # D200: One-line docstring should fit on one line with quotes (not critical)
    D200,
    # D202: No blank lines allowed after function docstring (not critical)
    D202,
    # D204: 1 blank line required after class docstring (not critical)
    D204,
    # D205: 1 blank line required between summary line and description (not critical)
    D205,
    # D400: First line should end with a period (not critical for this project)
    D400,
    # D401: First line should be in imperative mood (not critical)
    D401,
    # D403: First word of the first line should be properly capitalized (not critical)
    D403

# McCabe complexity checker
# (max-complexity already set above)

# Format for error output
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s

# Show source code for errors
show-source = True

# Count errors
count = True

# Statistics
statistics = True